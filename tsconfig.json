{
  "compilerOptions": {
    "outDir": "out",
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@bot-framework": ["bot-framework"],
      "@util": ["utils"],
      "@discord-wrappers": ["discord-wrappers"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["./src"],
  "files": ["src/global.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
